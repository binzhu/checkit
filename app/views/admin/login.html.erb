
  <div id="notice"><%= flash[:notice] %></div>
  <div id="loginfm">
  <%= form_tag do %>

	<h1>Login</h1>
	<div>
	  <label for="name">User Name:</label>
	  <%= text_field_tag :username, params[:username] %>
	</div>
	
	<div>
	  <label for="password">Password:</label>
	  <%= password_field_tag :password, params[:password] %>
	</div>
	
	<div>
	  <%= submit_tag "Login" %>
	</div>

  <% end %>
  </div>