
  <div id="notice"><%= flash[:notice] %></div>
  <div id="loginfm">
  <%= form_tag do %>

	<h1>Please Login</h1>
	<div id="loginname">
	    
	  <label for="name">User Name:</label>
	  <%= text_field_tag :username, params[:username], :class => 'userinput' %>
	</div>
	
	<div id="loginpw">
	  <label for="password">Password:</label>
	  <%= password_field_tag :password, params[:password], :class => 'userinput' %>
	</div>
	
	<div>
	  <%= submit_tag "Login", :class=> 'submit' %>
	</div>
	<div class='fix'></div>

  <% end %>
  </div>