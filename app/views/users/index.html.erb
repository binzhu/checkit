<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.fname + " " + user.lname, user %></td>
    <td><%= link_to 'follow', :controller => 'friends', :action => 'follow', :followee_id => user.id %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

