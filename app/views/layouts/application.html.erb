<!DOCTYPE html>
<html>
<head>
  <title>Checkit</title>
  <%= stylesheet_link_tag "custom", :media => "all" %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,300italic,600italic,400,300,600,700,800|Open+Sans+Condensed:300,300italic,700"%>
  <%= stylesheet_link_tag "jquery-ui"%>
  <%= javascript_include_tag "modernizr","jquery","jquery-ui", "checkit","application"  %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%if params[:controller=>"events"]%>
  	<div id="shadow">
		<div id="createEvent">
		<div id="createEventClose"></div>
		<div class="createEvent-padding">
		<h2>Create New Event</h2>
		<!--form goes here-->
		<%=render 'events/form'%>
		</div><!--create event padding div end-->
		</div><!--div create event end-->
	</div><!--shadow div end-->
  <%end%>
<div id="container">
	<header>
		<div id="logo">
			<%=link_to image_tag("logo3.jpg"), '/' %>
		</div>
		  <div id="user">
		    <div id="user-padding">
			<div id="usrname">
			      <h3>Good Morning</h3>
			      <p><%=authlink %></p>
			</div>
			<div id="userpic">
			      <%= image_tag "profile.png" %>
			</div>
			<div class="fix"></div>
		    </div>
		  </div>
	</header>
  <div id="main-container">
		<div id="sidebar-left">
			<div id="sidebar">
			<div id="sidebar-padding">
	    <%=sidepanel%>
				<span class="percent"></span>
			</div><!-- sidebar padding-->
			</div><!-- sidebar end-->
		</div><!-- sidebar-left end-->
      <%= yield %>
		
  <div class="fix"></div>
  </div><!--main container end -->
	
</div><!-- container end -->
</body>
</html>
